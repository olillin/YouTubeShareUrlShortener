{
  "manifest_version": 3,
  "name": "YouTube Share Link Shortener",
  "description": "Remove si parameter from the YouTube share URL",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["content-script.js"]
    }
  ]
}